<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="15dip"
    android:layout_width="match_parent"
    android:layout_height="200dip"
    >

    <TextView
        android:id="@+id/billDetailsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bill Details Goes here!"
        android:textSize="18sp"
        android:textColor="@color/text_description"
    />

    <View
        android:background="@color/action_bar"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="4dip"
        android:layout_width="match_parent"
        android:layout_height="1dip" />
    <LinearLayout
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Value: "
            android:textSize="18sp"
            android:textColor="@color/text_description"
            android:layout_marginRight="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/billValue"
            android:text="$137.71 "
            android:textSize="18sp"
            android:textColor="@color/text_description"
            android:layout_marginLeft="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  />
    </LinearLayout>

    <TextView
        android:id="@+id/billDescription"
        android:textSize="16sp"
        android:textColor="@color/text_description"
        android:text="Description of the bill will go here!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/text_description"
            android:textSize="18sp"
            android:text="Add Friend to bill"
            android:layout_weight="0.95"
            android:layout_width="0dip"
            android:layout_height="wrap_content" />

        <Button
            android:background="@drawable/ic_add_icon"
            android:layout_width="60dip"
            android:layout_height="60dip" />

    </LinearLayout>

</LinearLayout>